<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tp3_exo4_summary"
    tools:context=".tp3.Exo4_SummaryFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/paper"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="408dp"
        android:layout_height="78dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sf"
        android:text="@string/summary"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/sf"
        android:textColor="#000000"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewSurname"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/sf"
        android:textColor="#000000"
        android:text="Surname"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewName"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf"
        android:textColor="#000000"
        android:text="Phone"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSurname"
        app:layout_constraintTop_toBottomOf="@+id/textViewSurname" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf"
        android:textColor="#000000"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber" />

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textViewEmail"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
        tools:context=".tp3.Exo1_SummaryFragment">

        <TextView
            android:id="@+id/textViewDay"
            android:layout_width="50dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewMonth"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf"
            android:text="Janvier"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf"
            android:text="2000"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewInterests"
        android:layout_width="252dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf"
        android:textColor="#000000"
        android:text="Interests"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/dateLayout"
        app:layout_constraintTop_toBottomOf="@+id/dateLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>